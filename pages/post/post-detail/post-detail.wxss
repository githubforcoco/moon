.container {
  display: flex;
  flex-direction: column;
}

.head-image {
  width: 750rpx;
  height: 400rpx;
}

.title {
  font-size: 20px;
  margin: 30rpx;
  letter-spacing: 2px;
  color: #4b556c;
  font-family:'Times New Roman', Times, serif;
}

.author-date {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-left: 30rpx;
  align-items: center;
  justify-content: space-between;
  font-size:13px;
}

.author-box {
  display:flex;
  flex-direction: row;
  align-items: center;
}

.avatar {
  height: 50rpx;
  width: 50rpx;
}

.author {
  font-weight: 300;
  margin-left: 20rpx;
  color: #666;
}

.date {
  color: #919191;
  margin-right: 38rpx;
}



.detail {
  text-align: justify;
  color: #666;
  margin: 40rpx 22rpx 0;
  line-height: 44rpx;
  letter-spacing: 1px;
  font-size:14px;
  font-family:'Times New Roman', Times, serif;
}

.tool{
  height: 64rpx;
  margin: 20rpx 28rpx 20rpx 0;
  display: flex;
  justify-content: center;
}
.tool-item{
  align-items: center;
  margin-right: 30rpx;
  display: flex;
 
}

.tool-item:last-child{
  margin-right: 0rpx;
}

.tool-item image{
  height: 70rpx;
  width:70rpx;
  margin-right: 10rpx;
}
.tool-item text{
  font-size:12px;
}

.post {

float: right;
background-color:null;
position: fixed;
bottom: 20px;
right: 10px; 
border: 0 solid #ffffff;
border-radius: 100px;
box-shadow: 0px 0px 0px #cccccc
}
.tool text{
  font-size:15px;
  margin-bottom: 42rpx;
  margin-right: 20rpx;
}
